@model List<Category>
<div class="card mb-4">
      @if (!Model.Any())
        {
            <div class="alert alert-warning">No Category Found</div>
        }
        else

        {
    <div class="card-header"><h3 class="card-title">Bordered Table</h3></div>
    <!-- /.card-header -->
    <div class="card-body">
      

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr class="align-middle">
                            <td>@category.Id</td>
                        <td>@category.Name </td>
                        <td>
                            <a class="btn btn-danger" asp-controller="categories" asp-action="remove" asp-route-id="@category.Id">
                            Delete
                                </a>
                            </td>
                        
                    </tr>

                }

            </tbody>
        </table>
        
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-end">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </div>
    }
</div>